@model BoombaMarket.Models.Product
@{
    ViewBag.Title = "Удаление продукта";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название продукта</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>Цена</dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        
        <dt>Скидка</dt>
        <dd>
            @Html.DisplayFor(model => model.Sale)
        </dd>
    </dl>
    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="hidden" asp-for="IdProduct" />
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>