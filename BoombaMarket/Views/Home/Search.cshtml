@model IEnumerable<BoombaMarket.Models.Product>

<!DOCTYPE html>
<html>
<head>
    <title>Search Results</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-card {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Результат поиска:</h1>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card product-card">
                        <img src="@Url.Content("~/images/product-placeholder.jpg")" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-action="Details" asp-controller="Home" asp-route-id="@product.IdProduct" class="btn btn-sm btn-outline-secondary">Подробнее</a>
                                    <a asp-action="Edit" asp-controller="Home" asp-route-id="@product.IdProduct" class="btn btn-sm btn-outline-secondary">Изменить</a>
                                    <a asp-action="Delete" asp-controller="Home" asp-route-id="@product.IdProduct" class="btn btn-sm btn-outline-secondary">Удалить</a>
                                </div>
                                <small class="text-muted">@product.Price</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
