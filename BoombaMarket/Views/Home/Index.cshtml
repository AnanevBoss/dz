@model IEnumerable<BoombaMarket.Models.Product>
@{
    ViewData["Title"] = "Все товары";
}

<a asp-action="Create">Добавить товар</a>
<a class="btn btn-primary" href="@Url.Action("Logout")">Выход</a>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@Url.Content("~/images/product-placeholder.jpg")" class="card-img-top" alt="Product Image">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@item.IdProduct" class="btn btn-sm btn-outline-secondary">Подробнее</a>
                            <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.IdProduct" class="btn btn-sm btn-outline-secondary">Изменить</a>
                            <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.IdProduct" class="btn btn-sm btn-outline-secondary">Удалить</a>
                        </div>
                        <small class="text-muted">@item.Price</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
